<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_detail_one3"
    android:orientation="vertical"
    android:weightSum="800">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="730"

        android:orientation="vertical"
        android:weightSum="730">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="horizontal"
            android:weightSum="480">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="430" />

            <ImageView
                android:id="@+id/guide_end1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:background="@drawable/cancel29" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:weightSum="30">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center"
            android:weightSum="480"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/guide_btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/btn_detail_activity"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
            <ImageView
                android:id="@+id/guide_btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/btn_detail_off"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
            <ImageView
                android:id="@+id/guide_btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/btn_detail_off"
                />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/guide_end2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="#88000000"
        android:orientation="horizontal"
        android:weightSum="480">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="410"
            android:gravity="right|center_vertical"
            android:textColor="#ffffff"
            android:text="DO NOT SHOW AGAIN" />
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="25"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp25"
            android:layout_weight="35"
            android:scaleType="centerInside"
            android:background="@drawable/check64" />
    </LinearLayout>
</LinearLayout>