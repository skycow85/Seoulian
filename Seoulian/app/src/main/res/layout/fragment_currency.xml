<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/economic_title"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/icn_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/currency"
            android:layout_marginLeft="@dimen/dp15"
            />
        <kr.go.seoul.seoulian.component.TitleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency"
            android:textColor="@color/clear_text"
            android:textSize="@dimen/dp22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_toRightOf="@+id/icn_currency"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/economic_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/economic_title"
        android:layout_marginTop="@dimen/dp15">

        <RelativeLayout
            android:id="@+id/economic_fromCurrency"
            android:layout_width="@dimen/dp130"
            android:layout_height="@dimen/dp37"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@drawable/list_item_seletor"
            android:clickable="true">

            <ImageView
                android:id="@+id/icn_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icn_arrow_down" />

            <kr.go.seoul.seoulian.component.ContentTextView
                android:id="@+id/economic_left_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/icn_arrow"
                android:text="@string/select"
                android:textColor="@color/clear_text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <kr.go.seoul.seoulian.component.ContentTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="▶"
                android:textColor="@color/clear_text"
                android:textSize="@dimen/dp25" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/economic_toCurrency"
            android:layout_width="@dimen/dp130"
            android:layout_height="@dimen/dp37"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/list_item_seletor"
            android:clickable="true">

            <ImageView
                android:id="@+id/icn_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icn_arrow_down" />

            <kr.go.seoul.seoulian.component.ContentTextView
                android:id="@+id/economic_right_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/icn_arrow2"
                android:layout_centerVertical="true"
                android:text="@string/select"
                android:textColor="@color/clear_text" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/economic_select2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/economic_select"
        android:layout_marginTop="@dimen/dp15">


        <RelativeLayout
            android:id="@+id/economic_left_text2"
            android:layout_width="@dimen/dp130"
            android:layout_height="@dimen/dp37"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@drawable/list_item_seletor"
            android:clickable="true">

            <EditText
                android:id="@+id/economic_inputCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/amount"
                android:inputType="number"
                android:gravity="right"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textColor="@color/clear_text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <kr.go.seoul.seoulian.component.ContentTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="▶"
                android:textColor="@color/clear_text"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dp25" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/economic_right_text2"
            android:layout_width="@dimen/dp130"
            android:layout_height="@dimen/dp37"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/list_back_n"
            android:clickable="true">

            <kr.go.seoul.seoulian.component.ContentTextView
                android:id="@+id/economic_viewCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="0"
                android:layout_centerInParent="true"
                android:textColor="@color/clear_text" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/economic_select3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/economic_select2"
        android:layout_margin="@dimen/dp15">

        <kr.go.seoul.seoulian.component.ContentTextView
            android:id="@+id/economic_btn_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_seletor"
            android:backgroundTint="@color/black"
            android:text="@string/calculate"
            android:gravity="center"
            android:textSize="@dimen/dp18"
            android:padding="@dimen/dp15"
            android:textColor="@color/clear_text"
            android:clickable="true"/>

    </RelativeLayout>

</RelativeLayout>